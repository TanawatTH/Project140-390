<% include ../partials/header %>
<div class="jumbotron  "  >
<H2> Search Here</H2>
 <input class="form-control" id="myInput" type="text" placeholder="Search..">
 <br>
 <H2> Users</H2>
 <table class="table">
     <thead>
         <tr>
             <th>ID</th>
             <th>Email</th>
             <th>Password</th>

             <th><a name="" id="" class="btn btn-success" href="/insert_user" role="button">Add New</a></td></th>

         </tr>
     </thead>
     <tbody id="myTable">
     <% users.forEach(function(user){ %>
         <tr>
             <td scope="row"><%= user.id %></td>
             <td><%= user.email %></td>
             <td><%= user.password %></td>
             <td><a name="" id="" class="btn btn-dark" href="/users/<%= user.id %>" role="button">Edit</a>
             
         </tr>
         <% }); %>
             
     </tbody>
 </table>
</div>
<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>
