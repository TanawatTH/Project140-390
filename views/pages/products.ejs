<% include ../partials/header %>
<div class="jumbotron  "  >
 <H2> Search Here</H2>
 <input class="form-control" id="myInput" type="text" placeholder="Search..">
  <br>
  <H2> Products</H2>
 <table class="table">
     <thead>
         <tr>
             <th>ID</th>
             <th>Title</th>
             <th>Price</th>
             <th>Edit</th>
            
             <th><a name="" id="" class="btn btn-success" href="/insert_product" role="button">Add New</a></td></th>
         </tr>
     </thead>
     <tbody id="myTable">
     <% products.forEach(function(product){ %>
         <tr>
             <td scope="row"><%= product.id %></td>
             <td><%= product.title %></td>
             <td><%= product.price %></td> 
            
             <td><a name="" id="" class="btn btn-dark" href="/products/<%= product.id %>" role="button">Edit</a>
            
         </tr>
         </tr>
         <% }); %>
     </tbody>
 </table>
</div>
<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>
